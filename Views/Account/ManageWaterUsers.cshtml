@model List<ThanhToanTienNuoc.Models.NguoiDung>

@{
    ViewData["Title"] = "Quản Lý Người Dùng Nước Sạch";
}

<!-- Link Bootstrap 5 & Font Awesome -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="fas fa-users"></i> Quản Lý Người Dùng Nước Sạch</h2>
        <a asp-action="Logout" asp-controller="Account" class="btn btn-outline-danger">
            <i class="fas fa-sign-out-alt"></i> Đăng xuất
        </a>
    </div>

    <div class="card shadow-sm mb-4">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0"><i class="fas fa-list"></i> Danh Sách Người Dùng</h5>
        </div>
        <div class="card-body p-0">
            @if (Model != null && Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-bordered table-hover mb-0">
                        <thead class="table-light text-center">
                            <tr>
                                <th>Mã KH</th>
                                <th>Họ Tên</th>
                                <th>Địa Chỉ (Xóm)</th>
                                <th>Quý</th>
                                <th>Năm</th>
                                <th>Sử Dụng (m³)</th>
                                <th>Số Tiền (VNĐ)</th>
                                <th>TT Thanh Toán</th>
                                <th>Ngày Thanh Toán</th>
                                <th>Hình Thức</th>
                            </tr>
                        </thead>
                        <tbody class="text-center">
                            @foreach (var user in Model)
                            {
                                var chiSo = user.ChiSoNuocs?.FirstOrDefault(); // lấy bản ghi mới nhất (hoặc tùy bạn sắp xếp)
                                                                               <tr>
                                                                                   <td>@user.MaKhachHang</td>
                                                                                   <td>@user.HoTen</td>
                                                                                   <td>@user.DiaChi?.TenXom</td>
                                                                                   <td>@(chiSo?.Quy ?? 0)</td>
                                                                                   <td>@(chiSo?.Nam ?? 0)</td>
                                                                                   <td>@(chiSo?.SoThucDung ?? 0)</td>
                                                                                   <td>@(chiSo?.ThanhTien.ToString("N0") ?? "0")</td>

                                                                               </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="alert alert-warning m-3 text-center" role="alert">
                    <i class="fas fa-exclamation-circle"></i> Chưa có người dùng nào được thêm.
                </div>
            }
        </div>
    </div>

    <div class="card shadow-sm">
        <div class="card-header bg-success text-white">
            <h5 class="mb-0"><i class="fas fa-plus-circle"></i> Thêm Người Dùng Mới</h5>
        </div>
        <div class="card-body">
            <form method="post" asp-action="ThemTaiIndex">
                <div class="row mb-3">
                    <div class="col-md-6">
                        <label for="MaKhachHang" class="form-label">Mã KH:</label>
                        <input type="text" class="form-control" id="MaKhachHang" name="MaKhachHang" required>
                    </div>
                    <div class="col-md-6">
                        <label for="HoTen" class="form-label">Họ Tên:</label>
                        <input type="text" class="form-control" id="HoTen" name="HoTen" required>
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="col-md-6">
                        <label for="SoDienThoai" class="form-label">Số Điện Thoại:</label>
                        <input type="text" class="form-control" id="SoDienThoai" name="SoDienThoai">
                    </div>
                    <div class="col-md-6">
                        <label for="DiaChiId" class="form-label">Địa Chỉ (Xóm):</label>
                        <select id="DiaChiId" name="DiaChiId" class="form-control">
                            @foreach (var diachi in ViewBag.DiaChis)
                            {
                                <option value="@diachi.DiaChiId">@diachi.TenXom</option>
                            }
                        </select>
                    </div>
                </div>
                <div class="text-end">
                    <button type="submit" class="btn btn-success">
                        <i class="fas fa-save"></i> Thêm Người Dùng
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Bootstrap JS -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
