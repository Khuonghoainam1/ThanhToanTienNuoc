@model WaterService.Models.Customer
@{
    ViewData["Title"] = "Add New Customer";
}

<div class="customer-form">
    <div class="page-header mb-4">
        <h1 class="h3 mb-0">Add New Customer</h1>
        <p class="text-muted">Create a new customer account in the water service system.</p>
    </div>

    <div class="row">
        <div class="col-lg-8">
            <div class="card">
                <div class="card-body">
                    <form asp-action="Create" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                        
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="CustomerCode" class="form-label"></label>
                                    <div class="input-group">
                                        <input asp-for="CustomerCode" class="form-control" readonly />
                                        <button type="button" class="btn btn-outline-secondary" id="generateCode">
                                            <i class="fas fa-sync-alt"></i> Generate
                                        </button>
                                    </div>
                                    <span asp-validation-for="CustomerCode" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="RegistrationDate" class="form-label"></label>
                                    <input asp-for="RegistrationDate" class="form-control" type="date" />
                                    <span asp-validation-for="RegistrationDate" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="HouseholdHeadName" class="form-label"></label>
                            <input asp-for="HouseholdHeadName" class="form-control" placeholder="Enter household head name" />
                            <span asp-validation-for="HouseholdHeadName" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Address" class="form-label"></label>
                            <textarea asp-for="Address" class="form-control" rows="3" placeholder="Enter complete address"></textarea>
                            <span asp-validation-for="Address" class="text-danger"></span>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="PhoneNumber" class="form-label"></label>
                                    <input asp-for="PhoneNumber" class="form-control" placeholder="e.g., 0901234567" />
                                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="Email" class="form-label"></label>
                                    <input asp-for="Email" class="form-control" type="email" placeholder="optional@email.com" />
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Status" class="form-label"></label>
                            <select asp-for="Status" class="form-select">
                                <option value="@WaterService.Models.CustomerStatus.Active">Active</option>
                                <option value="@WaterService.Models.CustomerStatus.Inactive">Inactive</option>
                            </select>
                            <span asp-validation-for="Status" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Notes" class="form-label"></label>
                            <textarea asp-for="Notes" class="form-control" rows="2" placeholder="Additional notes or special requirements"></textarea>
                            <span asp-validation-for="Notes" class="text-danger"></span>
                        </div>

                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save"></i> Save Customer
                            </button>
                            <a href="@Url.Action("Index")" class="btn btn-secondary">
                                <i class="fas fa-times"></i> Cancel
                            </a>
                            <button type="submit" name="saveAndAddAnother" value="true" class="btn btn-outline-primary">
                                <i class="fas fa-plus"></i> Save & Add Another
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card">
                <div class="card-header">
                    <h6 class="mb-0">Customer Information</h6>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <small class="text-muted">Customer ID Format</small>
                        <p class="mb-0">C###### (e.g., C001234)</p>
                    </div>
                    <div class="mb-3">
                        <small class="text-muted">Phone Number</small>
                        <p class="mb-0">10-11 digits only</p>
                    </div>
                    <div class="mb-3">
                        <small class="text-muted">Registration Date</small>
                        <p class="mb-0">Cannot be in the future</p>
                    </div>
                    <div class="mb-3">
                        <small class="text-muted">Status</small>
                        <p class="mb-0">Active customers can receive services</p>
                    </div>
                </div>
            </div>

            <div class="card mt-3">
                <div class="card-header">
                    <h6 class="mb-0">Quick Actions</h6>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-2">
                        <a href="@Url.Action("Index")" class="btn btn-outline-primary btn-sm">
                            <i class="fas fa-list"></i> View All Customers
                        </a>
                        <button type="button" class="btn btn-outline-secondary btn-sm" onclick="clearForm()">
                            <i class="fas fa-eraser"></i> Clear Form
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Generate customer code
            $('#generateCode').on('click', function() {
                // This would typically call an API endpoint to generate the next code
                // For now, we'll just show a placeholder
                const currentCode = $('#CustomerCode').val();
                if (currentCode) {
                    const nextNumber = parseInt(currentCode.substring(1)) + 1;
                    $('#CustomerCode').val('C' + nextNumber.toString().padStart(6, '0'));
                }
            });

            // Auto-save form data to localStorage
            $('input, textarea, select').on('change', function() {
                saveFormData();
            });

            // Load saved form data
            loadFormData();
        });

        function clearForm() {
            if (confirm('Are you sure you want to clear all form data?')) {
                $('form')[0].reset();
                localStorage.removeItem('customerFormData');
            }
        }

        function saveFormData() {
            const formData = {
                householdHeadName: $('#HouseholdHeadName').val(),
                address: $('#Address').val(),
                phoneNumber: $('#PhoneNumber').val(),
                email: $('#Email').val(),
                status: $('#Status').val(),
                notes: $('#Notes').val()
            };
            localStorage.setItem('customerFormData', JSON.stringify(formData));
        }

        function loadFormData() {
            const savedData = localStorage.getItem('customerFormData');
            if (savedData) {
                const formData = JSON.parse(savedData);
                $('#HouseholdHeadName').val(formData.householdHeadName || '');
                $('#Address').val(formData.address || '');
                $('#PhoneNumber').val(formData.phoneNumber || '');
                $('#Email').val(formData.email || '');
                $('#Status').val(formData.status || '@WaterService.Models.CustomerStatus.Active');
                $('#Notes').val(formData.notes || '');
            }
        }

        // Clear saved data on successful form submission
        $('form').on('submit', function() {
            localStorage.removeItem('customerFormData');
        });
    </script>
}